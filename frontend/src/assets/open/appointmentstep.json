              "required": true
            },
            {
              "type": "text",
              "name": "detail_text1",
              "text": "Last name",
              "value": "last_name",
              "maxlength": 80,
              "required": false
            },
            {
              "type": "text",
              "name": "detail_text4",
              "text": "Email",
              "value": "email",
              "maxlength": 80,
              "required": true
            },
            {
              "type": "text",
              "name": "detail_text5",
              "text": "Mobile",
              "value": "mobile",
              "maxlength": 20,
              "required": true
