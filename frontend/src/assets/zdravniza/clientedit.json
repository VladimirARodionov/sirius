{
  "program": "zdravniza",
  "resource": "client",
  "api": "/api/contact/",
  "type": "edit",
  "title": "Edit contact",
  "style": "max-width: 768px;",
  "fields": [
    {
      "type": "text",
      "name": "edit_text1",
      "text": "First name",
      "value": "first_name",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "edit_text2",
      "text": "Last name",
      "value": "last_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "edit_text3",
      "text": "Middle name",
      "value": "middle_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "edit_text4",
      "text": "Email",
      "value": "email",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "edit_text5",
      "text": "Mobile",
      "value": "mobile",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "comments",
      "name": "edit_comment",
      "text": "Comment",
      "value": "comments",
      "comment": "comment_value",
      "api": "/api/comment/",
      "required": false
    },
    {
      "type": "actions",
      "fields":
      [
        {
          "type": "button",
          "name": "back_edit_button",
          "text": "Close",
          "action": "back",
          "color": "",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "save_edit_button",
          "text": "Save",
          "action": "save",
          "color": "success",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        }
      ]
    }
  ]
}
