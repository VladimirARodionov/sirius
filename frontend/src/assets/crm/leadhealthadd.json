{
  "program": "crm",
  "resource": "leadhealth",
  "api": "/api/leadhealth/",
  "type": "add",
  "title": "Add health lead",
  "style": "max-width: 768px;",
  "fields": [
    {
      "type": "select",
      "name": "lead_add_status",
      "text": "Status",
      "value": "status",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/leadstatus/",
      "resource": "leadstatus",
      "required": true
    },
    {
      "type": "begindate",
      "name": "lead_add_date",
      "text": "Date",
      "value": "date_added",
      "required": true
    },
    {
      "type": "text",
      "name": "lead_add_first_name",
      "text": "First name",
      "value": "first_name",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "lead_add_last_name",
      "text": "Last name",
      "value": "last_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_add_middle_name",
      "text": "Middle name",
      "value": "middle_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_add_email",
      "text": "Email",
      "value": "email",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_add_mobile",
      "text": "Mobile",
      "value": "mobile",
      "maxlength": 20,
      "required": true
    },
    {
      "type": "multi-select",
      "name": "lead_add_messengers",
      "text": "Messengers",
      "value": "messengers",
      "item_text": "name",
      "item_value": "messenger_value.id",
      "api": "/api/messenger/",
      "resource": "messenger",
      "required": false
    },
    {
      "type": "select",
      "name": "lead_add_consultant",
      "text": "Consultant",
      "value": "consultant",
      "item_text": "full_name",
      "item_value": "id",
      "api": "/api/crmconsultant/",
      "resource": "consultant",
      "required": false
    },
    {
      "type": "select",
      "name": "lead_add_source",
      "text": "Source",
      "value": "source",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/leadsource/",
      "resource": "leadsource",
      "required": true
    },
    {
      "type": "actions",
      "fields":
      [
        {
          "type": "button",
          "name": "back_add_button",
          "text": "Close",
          "action": "back",
          "color": "",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "save_add_button",
          "text": "Save",
          "action": "save",
          "color": "success",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        }
      ]
    }
  ]
}
