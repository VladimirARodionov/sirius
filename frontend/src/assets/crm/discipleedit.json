{
  "program": "crm",
  "resource": "disciple",
  "api": "/api/disciple/",
  "type": "edit",
  "title": "Edit disciple",
  "style": "max-width: 768px;",
  "fields": [
    {
      "type": "text",
      "name": "edit_text1",
      "text": "First name",
      "value": "first_name",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "edit_text2",
      "text": "Last name",
      "value": "last_name",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "edit_text3",
      "text": "Email",
      "value": "email",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "select",
      "name": "edit_select_school_type",
      "text": "School type",
      "value": "school_type",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/schooltype/",
      "resource": "schooltype",
      "required": false,
      "hide_edit": true
    },
    {
      "type": "actions",
      "fields":
      [
        {
          "type": "button",
          "name": "back_button1",
          "text": "Close",
          "action": "back",
          "color": "",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "edit_button1",
          "text": "Save",
          "action": "save",
          "color": "success",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        }
      ]
    }
  ]
}
