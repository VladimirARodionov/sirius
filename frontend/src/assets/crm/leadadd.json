{
  "program": "crm",
  "resource": "lead",
  "api": "/api/lead/",
  "type": "add",
  "title": "Add lead",
  "style": "max-width: 768px;",
  "fields": [
    {
      "type": "text",
      "name": "lead_add_first_name",
      "text": "First name",
      "value": "first_name",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "lead_add_last_name",
      "text": "Last name",
      "value": "last_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_add_middle_name",
      "text": "Middle name",
      "value": "middle_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_add_email",
      "text": "Email",
      "value": "email",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_add_mobile",
      "text": "Mobile",
      "value": "mobile",
      "maxlength": 20,
      "required": true
    },
    {
      "type": "actions",
      "fields":
      [
        {
          "type": "button",
          "name": "back_add_button",
          "text": "Close",
          "action": "back",
          "color": "",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "save_add_button",
          "text": "Save",
          "action": "save",
          "color": "success",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        }
      ]
    }
  ]
}
