{
  "program": "crm",
  "resource": "lead",
  "api": "/api/lead/",
  "type": "edit",
  "title": "Edit lead",
  "style": "max-width: 768px;",
  "fields": [
    {
      "type": "select",
      "name": "lead_edit_status",
      "text": "Status",
      "value": "status",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/leadstatus/",
      "resource": "leadstatus",
      "required": true
    },
    {
      "type": "datetime",
      "name": "lead_edit_datetime",
      "text": "Date",
      "value": "time",
      "required": false
    },
    {
      "type": "text",
      "name": "lead_edit_first_name",
      "text": "First name",
      "value": "first_name",
      "maxlength": 80,
      "required": true
    },
    {
      "type": "text",
      "name": "lead_edit_last_name",
      "text": "Last name",
      "value": "last_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_edit_middle_name",
      "text": "Middle name",
      "value": "middle_name",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_edit_email",
      "text": "Email",
      "value": "email",
      "maxlength": 80,
      "required": false
    },
    {
      "type": "text",
      "name": "lead_edit_mobile",
      "text": "Mobile",
      "value": "mobile",
      "maxlength": 20,
      "required": true
    },
    {
      "type": "select",
      "name": "lead_edit_messenger",
      "text": "Messenger",
      "value": "messenger",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/messenger/",
      "resource": "messenger",
      "required": true
    },
    {
      "type": "select",
      "name": "lead_edit_consultant",
      "text": "Consultant",
      "value": "consultant",
      "item_text": "full_name",
      "item_value": "id",
      "api": "/api/crmconsultant/",
      "resource": "consultant",
      "required": false
    },
    {
      "type": "select",
      "name": "lead_edit_source",
      "text": "Source",
      "value": "source",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/leadsource/",
      "resource": "leadsource",
      "required": true
    },
    {
      "type": "select",
      "name": "lead_edit_course",
      "text": "Course",
      "value": "course",
      "item_text": "name",
      "item_value": "id",
      "api": "/api/leadcourse/",
      "resource": "leadcourse",
      "required": true
    },
    {
      "type": "text",
      "name": "lead_edit_action",
      "text": "Action",
      "value": "action",
      "maxlength": 160,
      "required": false
    },
    {
      "type": "appointmentdate",
      "name": "lead_edit_action_date",
      "text": "Action date",
      "value": "action_date",
      "required": false
    },
    {
      "type": "text",
      "name": "lead_edit_action_time",
      "text": "Action time",
      "value": "action_time",
      "required": false
    },
    {
      "type": "button",
      "name": "clear_edit_action",
      "text": "Clear",
      "action": "clear_action",
      "color": ""
    },
    {
      "type": "comments",
      "name": "lead_edit_comment",
      "text": "Comment",
      "value": "comments",
      "comment": "comment_value",
      "api": "/api/crmcomment/",
      "contact_api": "/api/lead/",
      "required": false
    },
    {
      "type": "actions",
      "fields":
      [
        {
          "type": "button",
          "name": "back_edit_button",
          "text": "Close",
          "action": "back",
          "color": "",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "save_edit_button",
          "text": "Save",
          "action": "save",
          "color": "success",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        }
      ]
    }
  ]
}
