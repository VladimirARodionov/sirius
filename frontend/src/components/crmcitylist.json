{
  "program": "crm",
  "resource": "city",
  "api": "/api/city/",
  "type": "list",
  "title": "Cities",
  "name": "country",
  "style": "max-width: 768px;",
  "fields": [
    {
      "type": "group",
      "fields":
      [
        {
          "type": "button",
          "name": "add_button1",
          "text": "Add",
          "action": "add",
          "color": "success",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "edit_button1",
          "text": "Edit",
          "action": "edit",
          "color": "info",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "button",
          "name": "delete_button1",
          "text": "Delete",
          "action": "delete",
          "color": "error",
          "roles": [
            "admin_role",
            "edit_role"
          ]
        },
        {
          "type": "search",
          "name": "search1",
          "text": "Search",
          "action": "search"
        }
      ]
    },
    {
      "type": "table",
      "name": "table1",
      "headers": [
        {
          "text": "#",
          "value": "id"
        },
        {
          "text": "Region",
          "value": "region"
        },
        {
          "text": "Name",
          "value": "name"
        }
      ],
      "names": [
        {
          "name": "id"
        },
        {
          "name": "city_region.name"
        },
        {
          "name": "name"
        }
      ],
      "pagination": true,
      "api": "/api/city/"
    }
  ]
}
